<%- include('partials/head.ejs'); -%>

 
<div class="row mt-5">
    <div class="col-lg-6 offset-3">
        <div class="card">
            <div class="card-header">
                <strong class="card-title">Usuários</strong>
            </div>
            <div class="card-body">
                
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Nome</th>
                            <th scope="col">login</th>
                            <th scope="col">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(user => { %>
                        <tr>
                            <th scope="row"><%= user.id %></th>
                            <td><%= user.name %></td>
                            <td><%= user.login %></td>
                            <td>
                                <form style="display: inline;" method="post" action="/users/delete" onsubmit="confirmaExclusao(event,this)">
                                    <input type="hidden" name="id" value="<%= user.id %>">
                                    <button type="submit" class="btn btn-sm btn-danger" title="excluir">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                    
                                </form>
                                
                                <button class="btn btn-sm btn-info" title="editar">
                                    <a style="color: #fff;" href="/admin/users/edit/<%=user.id%>">
                                         <i class="fa fa-pencil"></i>
                                    </a>
                                   
                                </button>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
                <div class="col-lg-6 mt-3">
                    <a href="/admin/users/new" class="btn btn-lg btn-success">Adicionar</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    
    function confirmaExclusao(event, form){
        event.preventDefault();//não executa o evento.
        var decision = confirm("Quer mesmo deletar esse usuario?");//Caixa com opção ok ou cancelar
        if(decision){
            form.submit();
        }
    }

</script>

