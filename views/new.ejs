


<%- include('partials/head.ejs'); -%>



 
<div class="row mt-5">
    <div class="col-lg-6 offset-3">
        <div class="card">
            <div class="card-header">
                <strong class="card-title">Adicionar usuário</strong>
            </div>
            <div class="card-body">
                <form method="post" action="/users/create">
                     <div class="form-group">
                        <label class=" form-control-label">Nome</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                            <i class="fa fa-user"></i></div>
                            <input name="name" class="form-control" type="text">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class=" form-control-label">Usuário</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                            <i class="fa fa-user-o"></i></div>
                            <input name="login" class="form-control" type="text">
                        </div>
                    </div>
                     <div class="form-group">
                        <label class=" form-control-label">Senha</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                            <i class="fa fa-key"></i></div>
                            <input name="password" class="form-control" type="password">
                        </div>
                    </div>
                    <div class="form-group">
                        <a href="/admin/users" class="btn btn-lg btn-light">Cancelar</a>
                        <button class="btn btn-lg btn-success">Cadastrar</button>
                    </div>
                   
                </form>
            </div>
        </div>
    </div>
</div>


<%- include('partials/footer.ejs'); -%>
   

